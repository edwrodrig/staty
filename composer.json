{
    "name": "labo86/staty",
    "description": "Una biblioteca para generar sitios estáticos",
    "authors": [
        {
            "name": "Edwin Rodríguez-León",
            "homepage": "http://www.edwin.cl",
            "role": "Developer"
        }
    ],
    "license" : "MIT",
    "minimum-stability" : "stable",
    "require": {
        "php" : "^7.4",
        "edwrodrig/image" : "^3.3.0",
        "labo86/exception_with_data" : "^1.0",
        "ext-imagick": "*",
        "ext-fileinfo": "*"
    },
    "require-dev" : {
        "phpunit/phpunit" : "^8.5",
        "mikey179/vfsstream": "^1.6"
    },
    "autoload" : {
        "psr-4" : {
            "labo86\\staty\\" : "src/",
            "labo86\\cache\\" : "modules/cache/src/",
            "labo86\\staty_core\\" : "modules/core/src/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "test\\labo86\\staty\\" : "test/",
            "test\\labo86\\cache\\" : "modules/cache/src/",
            "test\\labo86\\staty_core\\" : "modules/core/test/"
        }
    },
    "archive": {
        "exclude": [
            "/.git",
            "/.idea",
            "/scripts",
            "/modules/core/test",
            "/test",
            "/.gitignore",
            "/.phpunit.result.cache",
            "/phpunit.xml.dist",
            "/README.md",
            "/.travis.yml"
        ]
    }
}
